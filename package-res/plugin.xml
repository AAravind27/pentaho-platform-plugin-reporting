<?xml version="1.0" encoding="UTF-8"?>

<plugin title="Pentaho Reporting Plugin" name="reporting">

   <lifecycle-listener class="org.pentaho.reporting.platform.plugin.LifecycleListener"/>

   <static-paths>
     <!-- this translates to /pentaho/content/reporting/resources/* -->
     <static-path url="/reporting/reportviewer" localFolder="reportviewer"/>
   </static-paths>

    <menu-items/>

    <overlays/>

    <content-types>
      <content-type type="prpt" mime-type="application/zip">
        <title>Pentaho Report</title>
        <description>Pentaho Report Bundle</description>
        <icon-url>content/reporting/reportviewer/prptFileType.png</icon-url>
        <meta-provider>org.pentaho.reporting.platform.plugin.ReportFileMetaDataProvider</meta-provider>
        <operations>
          <!-- for any of these urls, you can add layout=flow to the url -->
          <operation>
            <id>RUN</id>
            <perspective>viewer</perspective>
          </operation>
          <operation>
            <id>NEWWINDOW</id>
            <perspective>viewer</perspective>
          </operation>
          <operation>
            <id>SCHEDULE_NEW</id>
            <perspective>viewer</perspective>
          </operation>
          <operation>
            <id>SCHEDULE_EDIT</id>
            <perspective>viewer</perspective>
          </operation>
          <operation>
            <id>BACKGROUND</id>
          </operation>
          <operation>
            <id>PARAMETER</id>
          </operation>
        </operations>
      </content-type>
    </content-types>

    <bean id="SimpleReportingComponent" class="org.pentaho.reporting.platform.plugin.SimpleReportingComponent"/>

</plugin>

